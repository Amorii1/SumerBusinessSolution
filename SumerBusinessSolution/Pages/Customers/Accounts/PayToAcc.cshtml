@page
@model SumerBusinessSolution.PayToAccModel
@{
    ViewData["Title"] = "PayToAcc";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



@inject Services.CommonLocalizationService localizer

    <partial name="_StatusMessage" model="Model.StatusMessage" />
 

<form method="post">
    <div class="border backgroundWhite py-2 px-2">
        <input type="hidden" asp-for="CustAcc.Customer.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustAcc.Customer.CompanyName"></label>
            </div>
            <div class="col-5">
                <input asp-for="CustAcc.Customer.CompanyName" class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustAcc.Paid"></label>
            </div>
            <div class="col-5">
                <input asp-for="CustAcc.Paid" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustAcc.Debt"></label>
            </div>
            <div class="col-5">
                <input asp-for="CustAcc.Debt" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NewPayment"></label>
            </div>
            <div class="col-5">
                <input asp-for="NewPayment" class="form-control" />
            </div>
        </div>


        <div class="col-md-6">
            @*<input type="submit" class="btn btn-info form-control" value="حفظ" />*@
            <input asp-route-culture="@Request.RouteValues["culture"]" type="submit" class="btn btn-info form-control" value="@localizer.Get("حفظ")" />

        </div>
    </div>
</form>
