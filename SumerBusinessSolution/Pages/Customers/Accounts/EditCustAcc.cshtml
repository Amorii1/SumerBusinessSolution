@page
@model SumerBusinessSolution.Pages.Customers.Accounts.EditCustAccModel
@using SumerBusinessSolution.Utility
@using Microsoft.AspNetCore.Localization
@using System.ComponentModel.DataAnnotations;
@*@inject IHtmlLocalizer<IndexModel> htmlLocalizer*@ @*for html lozcalization*@
@*@inject IStringLocalizer<IndexModel> localizer*@
@*First Method*@
@inject Services.CommonLocalizationService localizer
@*Second and the easier Method*@

@{
    ViewData["Title"] = "EditCustAcc";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />


<div class="border backgroundWhite">
    @*<h2 class="text-info">اضافة مادة جديدة</h2>*@
    <h2 class="text-info  text-md-right">@localizer.Get("تعديل حسابات الزبون")</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CustAcc.Customer.Id" />

        <div class="row form-group">
            <div class="col-md-5 offset-md-5">
                <input asp-for="CustAcc.Customer.CompanyName" class="form-control  text-md-right" disabled />
            </div>
            <div class="col-md-2">
                <label asp-for="CustAcc.Customer.CompanyName"> </label>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-5 offset-md-5">
                <input asp-for="CustAcc.Id" class="form-control  text-md-right" disabled />
            </div>
            <div class="col-md-2">
                <label asp-for="CustAcc.Id"> </label>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-5 offset-md-5">
                <input asp-for="CustAcc.Paid" class="form-control  text-md-right" disabled />
            </div>
            <div class="col-md-2">
                <label asp-for="CustAcc.Paid"> </label>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-5 offset-md-5">
                <input asp-for="CustAcc.Debt" class="form-control  text-md-right" disabled />
            </div>
            <div class="col-md-2">
                <label asp-for="CustAcc.Debt"> </label>
            </div>
        </div>

        <h3 class="text-info  text-md-right">@localizer.Get("القيم الجديدة")</h3>


        <div class="row form-group text-success">
            <div class="col-md-5 offset-md-5">
                <input asp-for="NewPayment" class="form-control  text-md-right" />
            </div>
            <div class="col-md-2">
                <label asp-for="NewPayment"> </label>
            </div>
            <span asp-validation-for="NewPayment" class="text-danger"></span>
        </div>

        <div class="row form-group text-danger">
            <div class="col-md-5 offset-md-5">
                <input asp-for="NewDebt" class="form-control  text-md-right" />
            </div>
            <div class="col-md-2">
                <label asp-for="NewDebt"> </label>
            </div>
            <span asp-validation-for="NewDebt" class="text-danger"></span>
        </div>





        <div class=" form-group row">
            <div class="col-md-5 offset-md-5">
                <div class="row">
                    <div class="col-md-6">
                        <a asp-page="../Customers/index" asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-secondary form-control">
                            @localizer.Get("رجوع")
                        </a>
                    </div>

                    <div class="col-md-6">
                        @*<input type="submit" class="btn btn-info form-control" value="حفظ" />*@
                        <input asp-route-culture="@Request.RouteValues["culture"]" type="submit" class="btn btn-info form-control" value="@localizer.Get("تحديث")" />
                    </div>


                </div>

            </div>
        </div>

    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script language="javascript">


        $(document).ready(function () {
            $(window).keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });
        });
    </script>
}





