@model SumerBusinessSolution.Pages.Customers.Customers.IndexModel
@using Sumer.Utility
@using Microsoft.AspNetCore.Localization
@using System.ComponentModel.DataAnnotations;
@*@inject IHtmlLocalizer<IndexModel> htmlLocalizer*@ @*for html lozcalization*@
@*@inject IStringLocalizer<IndexModel> localizer*@
@*First Method*@
@inject Services.CommonLocalizationService localizer
@*Second and the easier Method*@

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


 <div class=" backgroundWhite">
    <div class="row">

        <div class="col-md-6 ">
            <a asp-route-culture="@Request.RouteValues["culture"]" asp-page="Create" class="btn btn-info"> <i class="fas fa-plus"></i></a>
        </div>

        <div class="col-md-6 text-right">
            <h2 class="text-info"> @localizer.Get("الزبائن")</h2>
        </div>

    </div>

    <form method="get" asp-page="Index">
        <div class="border backgroundWhite">

            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-2 text-md-right pb-1">

                                <button asp-route-culture="@Request.RouteValues["culture"]" type="submit" name="submit" value="search" class="btn btn-info form-control">
                                    <i class="fas fa-search"></i>
                                </button>

                            </div>
                            <div class="col-md-10 pb-1">
                                @Html.Editor("searchContactName", new { htmlAttributes = new { @class = "form-control text-md-right", placeholder = @localizer.Get("اسم الزبون....") } })

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <div>

        <table class="table table-striped border table-responsive-md table-responsive-lg">
            <tr class="table-secondary">

                <th></th>

                <th>
                    @Html.DisplayNameFor(m => m.Customer.PhoneNo)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customer.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customer.ContactName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customer.CompanyName)
                </th>
            </tr>

            @foreach (var item in Model.CustomerList)
            {
        <tr>

            @if (User.IsInRole(SD.AdminEndUser))
            {
                <td style="width:150px;">
                    <div class="btn-group" role="group">
                        <form method="post">


                            <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success text-white" asp-page="../Accounts/CustAccDetails" asp-route-CustId="@item.Id" type="submit" title="حسابات الزبون" name="AccDetails">
                                @localizer.Get("حسابات الزبون") <i class="fas fa-user"></i>
                            </a>

                            <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success text-white" asp-page="../Accounts/PayToAcc" asp-route-CustId="@item.Id" type="submit" title="فواتير الزبون" name="CustomerBills">
                                @localizer.Get("فواتير الزبون") <i class="fas fa-file-invoice-dollar"></i>
                            </a>

                            <a asp-page="Edit" asp-route-Id="@item.Id" asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-info text-white " type="submit" title="@localizer.Get("تعديل الحساب")">
                                <i class="fas fa-edit"></i>
                                @localizer.Get("تعديل الحساب")
                            </a>


                        </form>
                    </div>
                </td>

            }
            else
            {
                <td> </td>
            }


            <td>
                @Html.DisplayFor(m => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(m => item.Address)
            </td>
            <td>
                @Html.DisplayFor(m => item.ContactName)
            </td>
            <td>
                @Html.DisplayFor(m => item.CompanyName)
            </td>
        </tr>



            }

        </table>

    </div>
    </div>