@page
@model SumerBusinessSolution.CustomersAccModel
@{
    ViewData["Title"] = "CustomersAcc";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


@inject Services.CommonLocalizationService localizer
@using Sumer.Utility
<div class=" backgroundWhite">
    <div class="row">
        <div class="col-md-6 text-right">

            <h2 class="text-info"> @localizer.Get("حسابات الزبائن")</h2>

        </div>

    </div>

    <form method="get" asp-page="Index">
        <div class="border backgroundWhite">

            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-2 text-md-right pb-1">

                                <button asp-route-culture="@Request.RouteValues["culture"]" type="submit" name="submit" value="search" class="btn btn-info form-control">
                                    <i class="fas fa-search"></i>
                                </button>

                            </div>
                            <div class="col-md-5 pb-1">
                                @Html.Editor("CustomerName", new { htmlAttributes = new { @class = "form-control text-md-right", placeholder = @localizer.Get("اسم الزبون....") } })

                            </div>
                            <div class="col-md-5 pb-1">
                                @*@Html.Editor("searchCreateDateTime", new { htmlAttributes = new { @class = "form-control text-md-right", placeholder = @localizer.Get("تاريخ الطلب....") } })*@
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <div>

        <table class="table table-striped border table-responsive-md table-responsive-lg">
            <tr class="table-secondary">

                <th></th>
                <th>
                    @Html.DisplayNameFor(m => m.Customer.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.CustAcc.Paid)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.CustAcc.Debt)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model.CustAccList)
            {
                @if (item.Debt > 0)
                {
                    <tr style="background-color:red;">
                    </tr>

                    <tr style="background-color:red;">

                        <td>
                            <div class="btn-group" role="group">
                                <form method="post">


                                    @if (User.IsInRole(SD.AdminEndUser))
                                    {
                                        <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success text-white" asp-page="../Accounts/EditCustAcc" asp-route-CustId="@item.Id" type="submit" title="تعديل الحساب" name="AccDetails">
                                            @localizer.Get("") <i class="fas fa-check"></i>
                                        </a>
                                    }
                                    <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success text-white" asp-page="../Accounts/PayToAcc" asp-route-CustId="@item.Id" type="submit" title="دفع لحساب الزبون" name="PayToAcc">
                                        @localizer.Get("") <i class="fas fa-check"></i>
                                    </a>


                                </form>
                            </div>
                        </td>

                        <td>
                            @Html.DisplayFor(m => item.Customer.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Paid)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Debt)
                        </td>
                    </tr>

                }
                else
                {
                    <tr>
                        <td>
                            <div class="btn-group" role="group">
                                <form method="post">
                                    @if (User.IsInRole(SD.AdminEndUser))
                                    {
                                        <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success text-white" asp-page="../Accounts/EditCustAcc" asp-route-CustId="@item.Id" type="submit" title="تعديل الحساب" name="AccDetails">
                                            @localizer.Get("") <i class="fas fa-check"></i>
                                        </a>
                                    }
                                    <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success text-white" asp-page="../Accounts/PayToAcc" asp-route-CustId="@item.Id" type="submit" title="دفع لحساب الزبون" name="PayToAcc">
                                        @localizer.Get("") <i class="fas fa-check"></i>
                                    </a>


                                </form>
                            </div>
                        </td>

                        <td>
                            @Html.DisplayFor(m => item.Customer.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Paid)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Debt)
                        </td>
                    </tr>

                }
            }




        </table>

    </div>

</div>

@section Scripts {


    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
         $(document).ready(function () {
    $('#CustomerName').autocomplete({
    source: '@Url.Page("CustomersAcc", "SearchCustomer")'
    });
         });




    </script>
}
