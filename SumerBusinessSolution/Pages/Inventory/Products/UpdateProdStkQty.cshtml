    ViewData["Title"] = "UpdateProdStkQty";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<partial name="_StatusMessage" model="Model.StatusMessage" />
<br />
<form method="post" enctype="multipart/form-data">
    <div class="border backgroundwhite">
        <input type="hidden" asp-for=" InvStkQty.ProdInfo.Id" />


        <div class="row form-group">
            <div class="col-2">
                <label asp-for="InvStkQty.ProdInfo.ProdCode"></label>
            </div>
            <div class="col-6">
                <input asp-for="InvStkQty.ProdInfo.ProdCode" class="form-control" disabled />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="InvStkQty.ProdInfo.ProdName"></label>

            </div>
            <div class="col-6">
                <input asp-for="InvStkQty.ProdInfo.ProdName" class="form-control" disabled />
