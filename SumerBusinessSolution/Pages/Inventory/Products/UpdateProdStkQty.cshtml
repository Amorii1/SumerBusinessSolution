        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="InvStkQty.Qty"></label>

            </div>
            <div class="col-6">
                <input asp-for="InvStkQty.Qty" class="form-control" disabled />
            </div>
        </div>
