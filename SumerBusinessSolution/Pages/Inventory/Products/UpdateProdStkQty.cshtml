@page
@model SumerBusinessSolution.Pages.Inventory.Products.UpdateProdStkQtyModel
@{
    ViewData["Title"] = "UpdateProdStkQty";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">
    <partial name="_StatusMessage" model="Model.StatusMessage" />

    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for=" InvStkQty.ProdInfo.Id" />


        <div class="row form-group">
            <div class="col-md-2">
                <label asp-for="InvStkQty.ProdInfo.ProdCode"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="InvStkQty.ProdInfo.ProdCode" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2">
                <label asp-for="InvStkQty.ProdInfo.ProdName"></label>

            </div>
            <div class="col-md-5">
                <input asp-for="InvStkQty.ProdInfo.ProdName" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                <label asp-for="InvStkQty.Warehouse.WhName"></label>

            </div>
            <div class="col-md-5">
                <input asp-for="InvStkQty.Warehouse.WhName" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                <label asp-for="InvStkQty.Qty"></label>

            </div>
            <div class="col-md-5">
                <input asp-for="InvStkQty.Qty" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @*<label>الكميه الجديده</label>*@
                <label>New Qty</label>

            </div>
            <div class="col-md-5">
                <input asp-for="NewQty" class="form-control" />
            </div>
        </div>

        <div class=" form-group row">
            <div class="col-md-5 offset-md-2">
                <div class="row">
                    <div class="col-md-6">
                        @*<input type="submit" class="btn btn-info form-control" value="تحديث" />*@
                        <input type="submit" class="btn btn-info form-control" value="Update" />

                    </div>
                    <div class="col-md-6">
                        @*<a asp-page="Index" class="btn btn-success form-control"> رجوع </a>*@
                        <a asp-page="Index" class="btn btn-success form-control"> Back </a>

                    </div>
                </div>

            </div>
        </div>



    </form>

</div>
