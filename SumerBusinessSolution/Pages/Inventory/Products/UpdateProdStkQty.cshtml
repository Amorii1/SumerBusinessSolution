@page
@model SumerBusinessSolution.Pages.Inventory.Products.UpdateProdStkQtyModel
@using Sumer.Utility
@using Microsoft.AspNetCore.Localization
@using System.ComponentModel.DataAnnotations;
@*@inject IHtmlLocalizer<IndexModel> htmlLocalizer*@ @*for html lozcalization*@
@*@inject IStringLocalizer<IndexModel> localizer*@
@*First Method*@
@inject Services.CommonLocalizationService localizer
@*Second and the easier Method*@

@{
    ViewData["Title"] = "UpdateProdStkQty";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <div class="  border backgroundWhite">
        <h2 class="text-info  text-md-right">@localizer.Get("تحديث كمية المنتج")</h2>

        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <form method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for=" InvStkQty.ProdInfo.Id" />


            <div class="row form-group">

                <div class="col-md-5 offset-md-5">
                    <input asp-for="InvStkQty.ProdInfo.ProdCode" class="form-control text-md-right" />
                </div>
                <div class="col-md-2">
                    <label asp-for="InvStkQty.ProdInfo.ProdCode"></label>
                </div>
            </div>

            <div class="row form-group">

                <div class="col-md-5 offset-md-5">
                    <input asp-for="InvStkQty.ProdInfo.ProdName" class="form-control text-md-right" />
                </div>
                <div class="col-md-2">
                    <label asp-for="InvStkQty.ProdInfo.ProdName"></label>

                </div>
            </div>
            <div class="row form-group">

                <div class="col-md-5 offset-md-5">
                    <input asp-for="InvStkQty.Warehouse.WhName" class="form-control text-md-right" />
                </div>
                <div class="col-md-2">
                    <label asp-for="InvStkQty.Warehouse.WhName"></label>

                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-5 offset-md-5">
                    <input asp-for="InvStkQty.Qty" class="form-control text-md-right" />
                </div>
                <div class="col-md-2">
                    <label asp-for="InvStkQty.Qty"></label>

                </div>

            </div>
            <div class="row form-group">
                <div class="col-md-5 offset-md-5">
                    <input asp-for="NewQty" class="form-control text-md-right" />
                </div>
                <div class="col-md-2">
                    @*<label>الكميه الجديده</label>*@
                    <label asp-for="NewQty"></label>
                </div>

            </div>

            <div class=" form-group row">
                <div class="col-md-5 offset-md-5">
                    <div class="row">

                        <div class="col-md-6">
                            @*<a asp-page="Index" class="btn btn-success form-control"> رجوع </a>*@
                            <a asp-page="/Inventory/Reports/ProdInWhQty" asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success form-control">@localizer.Get("رجوع")</a>

                        </div>
                        <div class="col-md-6">
                            @*<input type="submit" class="btn btn-info form-control" value="تحديث" />*@
                            <input type="submit" asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-info form-control" value="@localizer.Get("تحديث")" />

                        </div>
                    </div>

                </div>
            </div>



        </form>

    </div>
