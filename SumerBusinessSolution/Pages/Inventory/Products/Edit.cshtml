@page
@model SumerBusinessSolution.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info">تحديث معلومات المنتج</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundwhite">
        <input type="hidden" asp-for="ProdInfo.Id" />


        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ProdCode"></label>
            </div>
            <div class="col-6">
                <input asp-for="ProdInfo.ProdCode" class="form-control" />
                <span asp-validation-for="ProdInfo.ProdCode" class="text-danger"> </span>
            </div>
        </div>


        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ProdName"></label>

            </div>
            <div class="col-6">
                <input asp-for="ProdInfo.ProdName" class="form-control" />
                <span asp-validation-for="ProdInfo.ProdName" class="text-danger"> </span>

            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ProdDescription"></label>

            </div>
            <div class="col-6">

                <textarea asp-for="ProdInfo.ProdDescription" class="form-control"></textarea>

                <span asp-validation-for="ProdInfo.ProdDescription" class="text-danger"> </span>

            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ProdCategory"></label>

            </div>
            <div class="col-6">
                <input asp-for="ProdInfo.ProdCategory" class="form-control" />
                <span asp-validation-for="ProdInfo.ProdCategory" class="text-danger"> </span>

            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.CreatedById"></label>

            </div>
            <div class="col-6">
                <input asp-for="ProdInfo.CreatedById" class="form-control" />
                <span asp-validation-for="ProdInfo.CreatedById" class="text-danger"> </span>

            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.CreatedDateTime"></label>

            </div>
            <div class="col-6">
                <input asp-for="ProdInfo.CreatedDateTime" class="form-control" />
                <span asp-validation-for="ProdInfo.CreatedDateTime" class="text-danger"> </span>

            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ImgFile"></label>
            </div>
            <div class="col-6">
                <input type="file" asp-for="img" class="form-control">   <img style="height: 200px; width: 100%; display: block;" src="~/img/@Model.ProdInfo.ImgFile">
                @*</input>*@
            </div>
        </div>



        @*<div class="row form-group">
                <div class="col-2">
                    <label asp-for="ProductInfo.ImgFile"></label>

                </div>
                <div class="col-6">
                    <input asp-for="ProductInfo.ImgFile" class="form-control" />
                    <span asp-validation-for="ProductInfo.ImgFile" class="text-danger"> </span>

                </div>
            </div>*@




        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.WholePrice"></label>

            </div>
            <div class="col-6">
                <input asp-for="ProdInfo.WholePrice" class="form-control" />
                <span asp-validation-for="ProdInfo.WholePrice" class="text-danger"> </span>

            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.RetailPrice"></label>

            </div>
            <div class="col-6">
                <input asp-for="ProdInfo.RetailPrice" class="form-control" />
                <span asp-validation-for="ProdInfo.RetailPrice" class="text-danger"> </span>

            </div>
        </div>


        <div class=" form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="تحديث" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">رجوع الى القائمه</a>
                    </div>
                </div>

            </div>
        </div>

    </div>

</form>

