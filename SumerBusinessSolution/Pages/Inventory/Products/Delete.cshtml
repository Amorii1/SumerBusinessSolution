@page
@model SumerBusinessSolution.Pages.Inventory.Products.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info">Delete Product</h2>
<form method="post">
    <div class="backgroundwhite border pt-3 pl-3">
        <input type="hidden" asp-for="ProdInfo.Id" />


        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ProdCode"> </label>
            </div>
            <div class="col-5">
                <input disabled asp-for="ProdInfo.ProdCode" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ProdName"></label>
            </div>
            <div class="col-5">
                <input disabled class="form-control" asp-for="ProdInfo.ProdName" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ProdDescription"> </label>
            </div>
            <div class="col-5">
                <textarea asp-for="ProdInfo.ProdDescription" class="form-control" disabled></textarea>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ProdCategory"> </label>
            </div>
            <div class="col-5">
                <input asp-for="ProdInfo.ProdCategory" class="form-control" disabled />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.ImgFile"> </label>
            </div>
            <div class="col-5">
                <input asp-for="ProdInfo.ImgFile" class="form-control" disabled />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.RetailPrice"> </label>
            </div>
            <div class="col-5">
                <input asp-for="ProdInfo.RetailPrice" class="form-control" disabled />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.WholePrice"> </label>
            </div>
            <div class="col-5">
                <input asp-for="ProdInfo.WholePrice" class="form-control" disabled />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.CreatedById"> </label>
            </div>
            <div class="col-5">
                <input asp-for="ProdInfo.CreatedById" class="form-control" disabled />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProdInfo.CreatedDateTime"> </label>
            </div>
            <div class="col-5">
                <input asp-for="ProdInfo.CreatedDateTime" class="form-control" disabled />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <btn data-toggle="modal" data-target="#Ask" class="btn btn-danger form-control">Delete</btn>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="Ask" role="dialog" method="post">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p class="alert alert-danger">Are you sure?</p>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-success" value="Yes" />
                    </div>
                </div>

            </div>
        </div>





    </div>
</form>
