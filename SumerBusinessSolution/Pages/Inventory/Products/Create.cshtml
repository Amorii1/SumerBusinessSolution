@model SumerBusinessSolution.Pages.Inventory.Products.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
    <div class="  border backgroundWhite">
        @*<h2 class="text-info">اضافة مادة جديدة</h2>*@
        <h2 class="text-info">New Product</h2>

        <form method="post" enctype="multipart/form-data">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="ProductInfo.ProdCode"> </label>
                </div>
                <div class="col-md-5">
                    <input asp-for="ProductInfo.ProdCode" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="ProductInfo.ProdName"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="ProductInfo.ProdName" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="ProductInfo.ProdDescription"></label>
                </div>
                <div class="col-md-5">
                    <textarea asp-for="ProductInfo.ProdDescription" class="form-control"></textarea>
                </div>
            </div>
            <div class="custom-file">
                <div class="row form-group">

                    <div class="col-md-2">
                        <label asp-for="ProductInfo.ImgFile"></label>
                    </div>
                    <div class="col-md-5">
                        <input type="file" asp-for="img" class="form-control p-md-1">
                    </div>
                </div>
            </div>
            <br />
            <br />

