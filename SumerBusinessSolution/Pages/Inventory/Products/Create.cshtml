@page
@model SumerBusinessSolution.Pages.Inventory.Products.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info">اضافه عنصر جديد</h2>
<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite pt-3 pl-3">


        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProductInfo.ProdCode"> </label>
            </div>
            <div class="col-5">
                <input asp-for="ProductInfo.ProdCode" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProductInfo.ProdName"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductInfo.ProdName" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProductInfo.ProdDescription"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="ProductInfo.ProdDescription" class="form-control"></textarea>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProductInfo.ImgFile"></label>
            </div>
            <div class="col-5">
                <input type="file" asp-for="img" class="form-control" />

            </div>

        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProductInfo.ProdCategory"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductInfo.ProdCategory" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProductInfo.RetailPrice"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductInfo.RetailPrice" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ProductInfo.WholePrice"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductInfo.WholePrice" class="form-control" />
            </div>
        </div>
        @*<div class="row form-group">
                <div class="col-2">
                    <label asp-for="ProductInfo.CreatedBy"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ProductInfo.CreatedBy" class="form-control" />
                </div>
            </div>*@

        <div class=" form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="حفظ" />

                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">رجوع الى القائمه</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>

