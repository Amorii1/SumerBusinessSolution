                </div>
                <div class="col-md-5">
                    <input asp-for="ProductInfo.RetailPrice" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="ProductInfo.WholePrice"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="ProductInfo.WholePrice" class="form-control" />
                </div>
            </div>
