@page
@model SumerBusinessSolution.Pages.Inventory.Reports.WhProdQtyModel
@{
    ViewData["Title"] = "WhProdQty";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <div class="backgroundWhite">

        <div class="row">
            <div class="col-md-6">
                @*<h2 class="text-info">تقارير كمية المواد في المخزن </h2>*@
                <h2 class="text-info">Product Qty in Warehouse Report</h2>

            </div>

        </div>

        <form method="get" asp-page="WhProdQty">
            <div class="border backgroundWhite">
                <div @*style="height:60px;"*@ class="container ">
                    <div class="row">
                        <div class="col-md-11">
                            <div class="row" style="margin-top:10px;">
                                <div class="col-md-5 pb-1">
                                    <select asp-for="WhId"
                                            asp-items="@(new SelectList(Model.WarehouseList, "Id", "WhName"))"
                                            class="form-control">
                                        @*<option value="" disabled selected>اختار المخزن</option>*@
                                        <option value="" disabled selected>Select Warehouse</option>

                                    </select>
                                </div>
                                <div class="col-md-5 pb-1">
                                    @*@Html.Editor("searchProdCode", new { htmlAttributes = new { @class = "form-control", placeholder = ".....رمز المنتج " } })*@
                                    @Html.Editor("searchProdCode", new { htmlAttributes = new { @class = "form-control", placeholder = "Product Code...." } })

                                </div>
                                <div class="col-md-2 text-md-right pb-1">

                                    <button type="submit" name="submit" value="search" class="btn btn-info form-control">
                                        <i class="fas fa-search"></i>
                                    </button>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>





        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.InvStockQtyList[0].ProdInfo.ProdCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.InvStockQtyList[0].ProdInfo.ProdName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.InvStockQtyList[0].Qty)
                    </th>

                    <th></th>
                    <th></th>
                </tr>
                @if (Model.InvStockQtyList.Count() == 0)
                {
                    @*<h2 class="text-danger text-md-center">لا يوجد تقرير لكمية المواد في المخزن</h2>*@
                    <h2 class="text-danger text-md-center">No Report Found</h2>

                }
                else
                {
                    @foreach (var item in Model.InvStockQtyList)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.ProdInfo.ProdCode)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ProdInfo.ProdName)
                            </td>
                            @if (item.Qty < 10)
                            {
                                <td class="bg-danger">
                                    @Html.DisplayFor(m => item.Qty)
                                </td>
                            }
                            else
                            {
                                <td>
                                    @Html.DisplayFor(m => item.Qty)
                                </td>
                            }


                        <td>
                            @*<a asp-page="../Products/Details" asp-route-ID="@item.ProdInfo.Id" style="text-decoration:none;">
            <img src="~/images/car.png" width="40" /> &nbsp; تفاصيل المنتج
        </a>*@
                            <a asp-page="../Products/Details" asp-route-ID="@item.ProdInfo.Id" style="text-decoration:none;">
                                <img src="~/images/car.png" width="40" /> &nbsp; Product Details
                            </a>
                        </td>
                        <td>
                            @*<a asp-page="../Transactions/ProdTrans" asp-route-ProdId="@item.ProdId" asp-route-WhId="@item.WhId" style="text-decoration:none;">
            <img src="~/images/car.png" width="40" /> &nbsp; تفاصيل
        </a>*@
                            <a asp-page="../Transactions/ProdTrans" asp-route-ProdId="@item.ProdId" asp-route-WhId="@item.WhId" style="text-decoration:none;">
                                <img src="~/images/car.png" width="40" /> &nbsp; Details
                            </a>
                        </td>
                        </tr>
                    }
                }
                @*<tr>
            <td colspan="5" class="text-right">
                <div page-model="@Model.UsersListVM.PagingInfo" asp-action="Index" page-class="btn border"
                     page-class-normal="btn btn-light" page-class-selected="btn btn-info active" class="btn-group">

                </div>
            </td>
        </tr>*@
            </table>
        </div>
    </div>
    




        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

            <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
            <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

            <script>
         $(document).ready(function () {
    $('#searchProdCode').autocomplete({
    source: '@Url.Page("WhProdQty", "SearchNow")'
    });
    });
            </script>
        }

