@page
@model SumerBusinessSolution.Pages.Inventory.Warehouses.Create
@{
    ViewData["Title"] = "CreateWarehouse";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>

    <div id="fh5co-main">


        <div class=" fh5co-narrow-content animate-box" data-animate-effect="fadeInLeft">
            <div class="row">
                <div class="col-md-4">
                    <h2>Add New Warehouse</h2>
                </div>
            </div>

            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="border backgroundWhite pt-md-3 pl-md-3">


                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="Warehouse.WhCode"></label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="Warehouse.WhCode" class="form-control" />
                        </div>
                        <span asp-validation-for="Warehouse.WhCode" class="text-danger"></span>
                    </div>


                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="Warehouse.WhLocation"> </label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="Warehouse.WhLocation" class="form-control" />
                        </div>
                        <span asp-validation-for="Warehouse.WhLocation" class="text-danger"></span>
                    </div>


                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="Warehouse.WhName"> </label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="Warehouse.WhName" class="form-control" />
                        </div>
                        <span asp-validation-for="Warehouse.WhName" class="text-danger"></span>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="Warehouse.CreatedDateTime"> </label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="Warehouse.CreatedDateTime" class="form-control" />
                        </div>
                        <span asp-validation-for="Warehouse.CreatedDateTime" class="text-danger"></span>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="Warehouse.WhType.Type"></label>
                        </div>
                        <div class="col-md-5">
                            <select WhType="myList" asp-for="Warehouse.WhType.Type">
                                <option value="StoreRoom">StoreRoom</option>
                                <option value="ShowRoom">ShowRoom</option>
                            </select>
                        </div>
                        <span asp-validation-for="Warehouse.WhType.Type" class="text-danger"></span>
                    </div>



                    <div class=" form-group row">
                        <div class="col-md-7 offset-md-2">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="submit" class="active btn btn-md btn-info form-control" value="Create" />
                                </div>
                                <div class="col-md-6">
                                    <a asp-page="Index" class=" active  btn-mid btn-success form-control text-center text-uppercase">Back to List</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </form>
        </div>

        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }



    </div>
</div>

