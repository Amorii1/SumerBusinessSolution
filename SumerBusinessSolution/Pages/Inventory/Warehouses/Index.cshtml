@page
@model SumerBusinessSolution.Inventory.Warehouses.IndexModel
@using Sumer.Utility
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


    <div class=" backgroundWhite">
        <div class="row">
            <div class="col-md-6">
                @*<h2 class="text-info"> المخازن </h2>*@
                <h2 class="text-info"> Warehouses </h2>

            </div>
            @if (User.IsInRole(SD.AdminEndUser))
            {
                <div class="col-md-6 text-right ">
                    <div class="btn-group">
                        <a asp-page="Create" class="btn btn-info"> <i class="fas fa-plus"></i></a>
                        <a asp-page="../Whtypes/Create" class="btn btn-primary"> <i class="fas fa-plus"></i></a>
                    </div>
                </div>
            }
            </div>


        <form method="get" asp-page="Index">
            <div class="border backgroundWhite">

                <div class="container">
                    <div class="row">
                        <div class="col-md-11">
                            <div class="row" style="margin-top:10px;">
                                <div class="col-md-5 pb-1">

                                    @*@Html.Editor("searchWhCode", new { htmlAttributes = new { @class = "form-control", placeholder = ".....رمز المخزن" } })*@
                                    @Html.Editor("searchWhCode", new { htmlAttributes = new { @class = "form-control", placeholder = "Warehouse Code...." } })

                                </div>
                                <div class="col-md-5 pb-1">
                                    @*@Html.Editor("searchWhName", new { htmlAttributes = new { @class = "form-control", placeholder = ".....اسم المخزن" } })*@
                                    @Html.Editor("searchWhName", new { htmlAttributes = new { @class = "form-control", placeholder = "Warehouse Name...." } })

                                </div>

                                <div class="col-md-2 text-md-right pb-1">

                                    <button type="submit" name="submit" value="search" class="btn btn-info form-control">
                                        <i class="fas fa-search"></i>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>


        <div>
            <table class="table table-striped table-secondary border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Warehouse[0].WhCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Warehouse[0].WhName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Warehouse[0].WhLocation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Warehouse[0].WhType.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Warehouse[0].ApplicationUser.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Warehouse[0].CreatedDateTime)
                    </th>
                </tr>
                @if (Model.Warehouse.Count() == 0)
                {
                    @*<h2 class="text-danger text-md-center">لا يوجد مخازن مضافة     </h2>*@
                    <h2 class="text-danger text-md-center">No Warehouses created</h2>

                }
                else
                {
                    @foreach (var item in Model.Warehouse)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(m => item.WhCode)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.WhName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.WhLocation)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.WhType.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ApplicationUser.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.CreatedDateTime)
                            </td>

                        </tr>
                    }
                }
            </table>

        </div>

    </div>

