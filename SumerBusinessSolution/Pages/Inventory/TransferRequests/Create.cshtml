@page
@model SumerBusinessSolution.Pages.Inventory.TransferRequests.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <div class="border backgroundWhite">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        @*<h2 class="text-info">طلب حركة المواد</h2>*@
        <h2 class="text-info">Transfer Request</h2>

        <form method="post">

            @*<input type="hidden" asp-for="InvTransfer.CreatedById" />*@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />


            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="ProdCode"></label>
                </div>
                <div class="col-md-5">
                    <input type="text" id="ProdInfo" asp-for="ProdCode" class="form-control" />
                </div>
                <span asp-validation-for="ProdCode" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="FromWhId"></label>
                </div>
                <div class="col-md-5">
                    <select asp-for="FromWhId"
                            asp-items="@(new SelectList(Model.Warehouselist, "Id", "WhName"))"
                            class="form-control" id="FromWhId">
                    </select>
                </div>
                @*<span asp-validation-for="InvTransfer.FromWarehouse.Id" class="text-danger"></span>*@
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="ToWhId"></label>
                </div>
                <div class="col-md-5">
                    <select asp-for="ToWhId"
                            asp-items="@(new SelectList(Model.WarehouselistTo, "Id", "WhName"))"
                            class="form-control" id="ToWhId">
                    </select>
                </div>
                @*<span asp-validation-for="InvTransfer.ToWarehouse.Id" class="text-danger"></span>*@
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Qty"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="Qty" class="form-control" id="qty" />

                </div>
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Note"></label>
                </div>
                <div class="col-md-5">
                    <textarea placeholder="ملاحظات" asp-for="Note" class="form-control"></textarea>
                </div>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-5 offset-md-2">
                    <div class="row">

                        <div class="col-md-6">
                            @*<button type="submit" class="btn btn-info form-control" onclick="return ValidateInput()">حفظ</button>*@
                            <button type="submit" class="btn btn-info form-control" onclick="return ValidateInput()">Save</button>

                        </div>
                        <div class="col-md-6">
                            @*<a asp-page="Index" class="btn btn-success form-control">رجوع</a>*@
                            <a asp-page="Index" class="btn btn-success form-control">Back</a>

                        </div>
                    </div>
                </div>
            </div>

            @*<div class="row">
                <div class="col-7">
                    <button type="submit" class="btn btn-info" onclick="return ValidateInput()">SAVE</button>
                </div>
            </div>*@

        </form>
    </div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
         $(document).ready(function () {
    $('#ProdInfo').autocomplete({
    source: '@Url.Page("Create", "SearchNow")'
    });
    });
    </script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        function ValidateInput() {
            var qty = document.getElementById("qty").value;
            var fromWh = document.getElementById("FromWhId").value;
            var toWh = document.getElementById("ToWhId").value;

            if (qty == 0) {
                //swal("Error!", "الكمية غير محددة", "error");
                swal("Error!", "Enter Qty", "error");
                return false
            }
            if (fromWh == toWh) {
                //swal("Error!", "اختار المخزن الصحيح", "error");
                swal("Error!", "Warehouses can not be similar", "error");
                return false
            }
        }

    </script>
}

