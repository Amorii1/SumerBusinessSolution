@page
@model SumerBusinessSolution.CreateInvTransferModel
@{
    ViewData["Title"] = "CreateInvTransfer";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<br />
<h2 class="text-info">Inventory transfer</h2>
<form method="post">
    <div class="border backgroundWhite" style="padding-left:5px;">
        <input type="hidden" asp-for="InvTransfer.CreatedById" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="InvTransfer.ProdInfo.ProdCode"></label>
            </div>
            <div class="col-5">
                <input type="text" id="ProdInfo" asp-for="ProdCode" />
            </div>
            <span asp-validation-for="InvTransfer.ProdInfo.ProdCode" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FromWhId"></label>
            </div>
            <div class="col-5">
                <select asp-for="FromWhId"
                        asp-items="@(new SelectList(Model.Warehouselist, "Id", "WhName"))"
                        class="form-control">
                </select>
            </div>
            <span asp-validation-for="InvTransfer.FromWarehouse.Id" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ToWhId"></label>
            </div>
            <div class="col-5">
                <select asp-for="ToWhId"
                        asp-items="@(new SelectList(Model.Warehouselist, "Id", "WhName"))"
                        class="form-control">
                </select>
            </div>
            <span asp-validation-for="InvTransfer.ToWarehouse.Id" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="InvTransfer.Qty"></label>
            </div>
            <div class="col-5">
                <input asp-for="InvTransfer.Qty" class="form-control" />

            </div>
            <span asp-validation-for="InvTransfer.Qty" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="InvTransfer.Note"></label>
            </div>
            <div class="col-5">
                <textarea placeholder="Any notes....." asp-for="InvTransfer.Note" class="form-control"></textarea>
            </div>
            <span asp-validation-for="InvTransfer.Note" class="text-danger"></span>
        </div>


        <div class="row">
            <div class="col-7">
                <button type="submit" class="btn btn-info">SAVE</button>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
         $(document).ready(function () {
    $('#ProdInfo').autocomplete({
    source: '@Url.Page("CreateInvTransfer", "SearchNow")'
    });
    });
    </script>

}
