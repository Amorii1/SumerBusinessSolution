@page
@model SumerBusinessSolution.Pages.Inventory.IncomingGoods.IndexModel
@using Sumer.Utility
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <div class="backgroundWhite">

        <div class="row">
            
@if (User.IsInRole(SD.AdminEndUser))
{
            <div class="col-md-3  ">
                <a asp-page="../IncomingGoods/Create" class="btn btn-info">

                    <i class="fas fa-plus"></i>

                </a>
            </div>
}
        <div class="col-md-5 offset-md-4">
            @*<h2 class="text-info">البضائع الوارده </h2>*@
            <h2 class="text-info text-md-right">Incoming Goods</h2>

        </div>
  
        </div>


        <form method="get" asp-page="Index">
            <div class="border backgroundWhite">
                <div @*style="height:60px;"*@ class="container ">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row" style="margin-top:10px;">
                                <div class="col-md-2 text-md-right pb-1">

                                    <button type="submit" name="submit" value="search" class="btn btn-info form-control">
                                        <i class="fas fa-search"></i>
                                    </button>

                                </div>
                                <div class="col-md-5 pb-1">
                                    @*@Html.Editor("searchProdCode", new { htmlAttributes = new { @class = "form-control", placeholder = ".....رمز المنتج " } })*@
                                   
                                        @Html.Editor("searchProdCode", new { htmlAttributes = new { @class = "form-control text-md-right", placeholder = "Product Code....." } })
                                 
                                </div>
                                <div class="col-md-5 pb-1">
                                    @*@Html.Editor("searchCreateDateTime", new { htmlAttributes = new { @class = "form-control", placeholder = "..... تاريخ الاضافه " } })*@
                                    @Html.Editor("searchCreateDateTime", new { htmlAttributes = new { @class = "form-control text-md-right", placeholder = "Date Created....." } })

                                </div>

                            </div>
                        
                        </div>
                    </div>
                </div>
            </div>
            </form>




            <div>
                <table class="table table-striped border table-responsive-md table-responsive-lg">
                    <tr class="table-secondary">

                        <th>
                            @Html.DisplayNameFor(m => m.ProdInfo.ProdName)

                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.ProdInfo.ProdCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Warehouse.WhName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IncomingGoods.Qty)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IncomingGoods.Note)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IncomingGoods.CreatedDateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IncomingGoods.ApplicationUser.FirstName)
                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                    </tr>
                    @if (Model.IncomingGoodList.Count() == 0)
                    {
                        @*<h2 class="text-danger text-md-center">لا يوجد منتجات واردة </h2>*@
                        <h2 class="text-danger text-md-center">No Incoming Goods created</h2>

                    }
                    else
                    {
                        @foreach (var item in Model.IncomingGoodList)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(m => item.ProdInfo.ProdName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.ProdInfo.ProdCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Warehouse.WhName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Qty)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.CreatedDateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.ApplicationUser.FirstName)
                                </td>
                                <td>
                                    @*<a asp-page="/Inventory/Products/details" asp-route-Id="@item.ProdInfo.Id" style="text-decoration:none;">
                                        المواد
                                    </a>*@
                                    <a asp-page="/Inventory/Products/details" asp-route-Id="@item.ProdInfo.Id" style="text-decoration:none;">
                                        Details
                                    </a>
                                </td>
                                <td>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
    </div>
         
