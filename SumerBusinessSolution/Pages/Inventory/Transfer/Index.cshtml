@page
@model SumerBusinessSolution.Inventory.Transfer.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<form method="get" asp-page="Index">
    <br /><br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Inventory Transfer </h2>
        </div>

    </div>

    <div class="border backgroundWhite">
        <div style="height:60px;" class="container border border-secondary">
            <div class="row">
                <div class="col-11">
                    <div class="row" style="margin-top:10px;">
                        <div class="col-4">
                            @Html.Editor("searchProdCode", new { htmlAttributes = new { @class = "form-control", placeholder = "Product Code....." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchCreateDateTime", new { htmlAttributes = new { @class = "form-control", placeholder = "Date time....." } })
                        </div>
                        @*<div>
                                start Date:<input type="datetime" name="startdate" />
                                End Date:<input type="datetime" name="enddate" />
                            </div>*@
                    </div>
                    <br />
                </div>
                <div class="col-1">
                    <div class="row" style="padding-top:10px; padding-right:15px;">
                        <button type="submit" name="submit" value="Search" class="btn btn-info form-control">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">


                    <th>
                        @Html.DisplayNameFor(m => m.ProdInfo.ProdCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.InvTransfers.FromWhId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.InvTransfers.ToWhId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.InvTransfers.Qty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.InvTransfers.Note)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.InvTransfers.CreatedDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.InvTransfers.ApplicationUser.FirstName)
                    </th>
                </tr>
                @foreach (var item in Model.InvTransferList)
                {
                    <tr>


                        <td>
                            @Html.DisplayFor(m => item.ProdInfo.ProdCode)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.FromWhId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ToWhId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Qty)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Note)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CreatedDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ApplicationUser.FirstName)
                        </td>


                    </tr>
                }

            </table>
        </div>
    </div>

</form>

