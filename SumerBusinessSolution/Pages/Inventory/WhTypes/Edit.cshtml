@page
@model SumerBusinessSolution.EditModel
@using SumerBusinessSolution.Utility
@using Microsoft.AspNetCore.Localization
@using System.ComponentModel.DataAnnotations;
@*@inject IHtmlLocalizer<IndexModel> htmlLocalizer*@ @*for html lozcalization*@
@*@inject IStringLocalizer<IndexModel> localizer*@
@*First Method*@
@inject Services.CommonLocalizationService localizer
@*Second and the easier Method*@

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />


<div class="border backgroundWhite">
    @*<h2 class="text-info">تحديث معلومات المنتج</h2>*@
    <h2 class="text-info text-md-right">@localizer.Get("تعديل نوع المخزن")</h2>

    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="WhType.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row form-group">

            <div class="col-md-5 offset-md-5">
                <input asp-for="WhType.Type" class="form-control text-md-right" />
                <span asp-validation-for="WhType.Type" class="text-danger"> </span>
            </div>
            <div class="col-md-2">
                <label asp-for="WhType.Type"></label>
            </div>
        </div>

        <div class=" form-group row">
            <div class="col-md-5 offset-md-5">
                <div class="row">
                    <div class="col-md-6">
                        <input asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-secondary form-control" type="button" value="@localizer.Get("الغاء")" onclick="history.back()">
                    </div>
                    <div class="col-md-6">
                        @*<input type="submit" class="btn btn-info form-control" value="تحديث" />*@
                        <input asp-route-culture="@Request.RouteValues["culture"]" type="submit" class="btn btn-info form-control" value="@localizer.Get("حفظ")" />

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

