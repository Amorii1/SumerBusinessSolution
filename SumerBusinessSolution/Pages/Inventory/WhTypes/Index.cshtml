@page
@model SumerBusinessSolution.Pages.Inventory.WhTypes.IndexModel
@inject Services.CommonLocalizationService localizer
@using SumerBusinessSolution.Utility
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
    <div class="float-md-right">
        <a asp-page="/index" title="الرئيسية" asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-info">

            <i class="fas fa-home"></i>

        </a>
    </div>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class=" backgroundWhite">



    <div dir="rtl" class="row">
        <div class="col-md-6 ">
            <h2 class="text-info text-md-right"> @localizer.Get("انواع المخازن") </h2>
        </div>

        @if (User.IsInRole(SD.AdminUser))
        {
            <div class=" col-md-6">

                <a asp-route-culture="@Request.RouteValues["culture"]" asp-page="Create" class="btn btn-primary"> <i class="fas fa-plus"></i></a>

            </div>
        }

    </div>
    <div>
        <table dir="rtl" class=" table table-striped border  text-md-center">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.WhType[0].Type)
                </th>

                <th></th>
            </tr>
            @if (Model.WhType.Count() == 0)
            {
                @*<h2 class="text-danger text-md-center">لا يوجد مخازن مضافة     </h2>*@
                <h2 class="text-danger text-md-center">@localizer.Get("لا يوجد نوع مخزن مضاف")</h2>

            }
            else
            {
                @foreach (var item in Model.WhType)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(m => item.Type)
                        </td>

                        <td>
                            <form>
                                <a class="btn btn-success" asp-route-culture="@Request.RouteValues["culture"]" asp-page="Edit" asp-route-TypeId="@item.Id" type="submit" title="تعديل"><i class="fa fa-edit"></i>@localizer.Get("")</a>

                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    
</div>



