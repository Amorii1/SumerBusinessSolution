@page
@model SumerBusinessSolution.Pages.Products.CreateModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>

    <div id="fh5co-main">


        <div class=" fh5co-narrow-content animate-box" data-animate-effect="fadeInLeft">
            <div class="row">
                <div class="col-md-4">
                    <h2>Create A New Product</h2>
                </div>
            </div>
            <form method="post" enctype="multipart/form-data">
                <div class="border backgroundWhite pt-md-3 pl-md-3">


                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="ProductInfo.ProdCode"> </label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="ProductInfo.ProdCode" class="form-control" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="ProductInfo.ProdName"></label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="ProductInfo.ProdName" class="form-control" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="ProductInfo.ProdDescription"></label>
                        </div>
                        <div class="col-md-5">
                            <textarea asp-for="ProductInfo.ProdDescription" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="ProductInfo.ImgFile"></label>
                        </div>
                        <div class="col-md-5">
                            <input type="file" asp-for="img" class="form-control" />

                        </div>

                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="ProductInfo.ProdCategory"></label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="ProductInfo.ProdCategory" class="form-control" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="ProductInfo.RetailPrice"></label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="ProductInfo.RetailPrice" class="form-control" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            <label asp-for="ProductInfo.WholePrice"></label>
                        </div>
                        <div class="col-md-5">
                            <input asp-for="ProductInfo.WholePrice" class="form-control" />
                        </div>
                    </div>
                    @*<div class="row form-group">
                            <div class="col-2">
                                <label  asp-for="ProductInfo.CreatedBy"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="ProductInfo.CreatedBy" class="form-control" />
                            </div>
                        </div>*@

                    <div class=" form-group row">
                        <div class="col-md-7 offset-md-2">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="submit" class="active btn btn-md btn-info form-control" value="Create" />
                                </div>
                                <div class="col-md-6">
                                    <a asp-page="Index" class=" active  btn-mid btn-success form-control text-center text-uppercase">Back to List</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </form>
        </div>





    </div>
</div>
