@model SumerBusinessSolution.Pages.Products.EditModel

@{
 Layout = "~/Pages/Shared/_Layout.cshtml";
    }
<div>

        <div id="fh5co-main">
          

            <div class=" fh5co-narrow-content animate-box" data-animate-effect="fadeInLeft">
                <div class="row">
                    <div class="col-md-4">
                        <h1 class="text-body text-success ">Edit the Product</h1>
                    </div>
                </div>
                <form method="post" enctype="multipart/form-data">
                    <div class="border backgroundWhite pt-md-3 pl-md-3">
                        <input type="hidden" asp-for="ProdInfo.Id" />


                        <div class="row form-group">
                            <div class="col-md-2">
                                <label class="text-uppercase" asp-for="ProdInfo.ProdCode"> </label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="ProdInfo.ProdCode" class="form-control" />
                                <span asp-validation-for="ProdInfo.ProdCode" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-2">
                                <label class="text-uppercase" asp-for="ProdInfo.ProdName"></label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="ProdInfo.ProdName" class="form-control" />
                                <span asp-validation-for="ProdInfo.ProdName" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-2">
                                <label class="text-uppercase" asp-for="ProdInfo.ProdDescription"></label>
                            </div>
                            <div class="col-md-5">
                                <textarea asp-for="ProdInfo.ProdDescription" class="form-control"></textarea>
                                <span asp-validation-for="ProdInfo.ProdDescription" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-2">
                                <label asp-for="ProdInfo.ImgFile"></label>
                            </div>
                            <div class="col-md-5">
                                <input type="file" asp-for="img" class="form-control">   <img style="height: 200px; width: 100%; display: block;" src="~/img/@Model.ProdInfo.ImgFile">
                               
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-2">
                                <label class="text-uppercase" asp-for="ProdInfo.ProdCategory"></label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="ProdInfo.ProdCategory" class="form-control" />
                                <span asp-validation-for="ProdInfo.ProdCategory" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-2">
                                <label class="text-uppercase" asp-for="ProdInfo.RetailPrice"></label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="ProdInfo.RetailPrice" class="form-control" />
                                <span asp-validation-for="ProdInfo.RetailPrice" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-2">
                                <label class="text-uppercase" asp-for="ProdInfo.WholePrice"></label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="ProdInfo.WholePrice" class="form-control" />
                                <span asp-validation-for="ProdInfo.WholePrice" class="text-danger"> </span>
                            </div>
                        </div>
