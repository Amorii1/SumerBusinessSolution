@page
@model SumerBusinessSolution.Pages.Sales.Billings.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@using SumerBusinessSolution.Utility
@inject Services.CommonLocalizationService localizer

<div class="border backgroundWhite">
    @*<h2 class="text-info">المواد الواردة </h2>*@
    <h2 class="text-info text-md-right">  @localizer.Get("تفاصيل الفاتورة")</h2>

    <form method="post">
        <div id="tabledata">
            <input type="hidden" asp-for="BillHeader.Id" />

            <br />
            <div class="pl-md-5 offset-md-4">
                <img src="~/image/Bnas Logo.jpeg" style="width:250px;height:250px;" />
            </div>
            <br />
            <div style="border: 2.7px solid black;   border-radius: 25px;">
                <div class="row col-md-12 pt-md-3">

                    <div class="row pt-md-2  col-md-5 form-control form-group offset-md-1">
                        <h4 class=" text-dark font-weight-bold text-md-right">@Model.CompanyInfo.PhoneNo/@Model.CompanyInfo.PhoneNo02</h4>
                    </div>

                    <div class="row pt-md-2 col-md-5 form-control form-group offset-md-1">
                        <h4 class=" text-dark font-weight-bold text-md-right">@Model.CompanyInfo.AddressAr</h4>
                    </div>

                </div>
                <div class="row col-md-12">

                    <div class="row pt-md-2  col-md-5 form-control form-group offset-md-1">
                        <h4 class=" text-dark font-weight-bold text-md-right">@Model.CompanyInfo.Email</h4>
                    </div>

                    <div class="row pt-md-2 col-md-5 form-control form-group offset-md-1">
                        <h4 class=" text-dark font-weight-bold text-md-right">@Model.CompanyInfo.AddressEn</h4>
                    </div>

                </div>
            </div>
            <hr />

            <div class="row col-md-12">


                <div id="field" class="row pt-md-2 col-md-3 form-control form-group offset-md-1">
                    <h4 class=" text-dark font-weight-bold text-md-right">@Model.BillHeader.Id &nbsp; : رقم الفاتورة</h4>
                </div>

                <div id="field" class="row pt-md-2 col-md-3 form-control form-group offset-md-1">
                    <h4 class=" text-dark font-weight-bold text-md-right"> اسم الزبون&nbsp;: @Model.BillHeader.Customer.CompanyName </h4>
                </div>

                <div id="field" class="row pt-md-2 col-md-3 form-control form-group offset-md-1">
                    <h4 class=" text-dark font-weight-bold text-md-right">@Model.BillHeader.ApplicationUser.FirstName &nbsp; : اسم الموظف</h4>
                </div>

            </div>
            <div class="row col-md-12">

                <div id="field" class="row pt-md-2  col-md-6 form-control form-group offset-md-1">
                    <h4 class=" text-dark font-weight-bold text-md-right">@Model.BillHeader.CreatedDataTime &nbsp; : التاريخ</h4>
                </div>

                <div id="field" class="row pt-md-2 col-md-2 form-control form-group offset-md-1">
                    <h4 class=" text-dark font-weight-bold text-md-right"> الدفع  : @Model.BillHeader.PaymentTerms</h4>
                </div>

            </div>


            <br />
            <br />

            <table class="table table-striped table-responsive-md table-responsive-lg ">
                <tr>

                    <th>
                        @Html.DisplayNameFor(m => m.BillItems.Note)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.BillItems.TotalAmt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.BillItems.UnitPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.BillItems.Qty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.BillItems.ProdInfo.ProdCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.BillItems.ProdInfo.ProdName)
                    </th>
                    <th>ت</th>

                </tr>
                @{int RowNo = 0;}

                @foreach (var item in Model.BillItemsList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Note)
                        </td>

                        <td>
                            @Html.DisplayFor(m => item.TotalAmt)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.UnitPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Qty)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ProdInfo.ProdCode)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ProdInfo.ProdName)
                        </td>
                        <td>@{RowNo++;} @RowNo</td>
                    </tr>
                }

            </table>

            <div class="row col-md-12">


                <div id="field" class="row pt-md-2 col-md-3 form-control form-group offset-md-1">
                    <h4 class=" text-dark font-weight-bold text-md-right">@Model.BillHeader.TotalAmt &nbsp; : المبلغ الكلي</h4>
                </div>



                <div id="field" class="row pt-md-2 col-md-3 form-control form-group offset-md-1">
                    <h4 class=" text-dark font-weight-bold text-md-right">@Model.BillHeader.Discount &nbsp; : التخفيض</h4>
                </div>


                <div id="field" class="row pt-md-2 col-md-3 form-control form-group offset-md-1">
                    <h4 class=" text-dark font-weight-bold text-md-right">@Model.BillHeader.TotalNetAmt &nbsp; : المبلغ الاجمالي</h4>
                </div>

            </div>
            <div id="field" class="row pt-md-2 col-md-10 form-control form-group offset-md-1" style="padding-bottom:10px;">
                <h4 class=" text-dark font-weight-bold text-md-right">@Model.BillHeader.PaidAmt &nbsp; : المبلغ المدفوع</h4>
            </div>

            <div class="row form-group text-success">

                <div class="col-md-5 offset-md-5">
                    <input id="paidAmt" type="text" asp-for="a => @Model.NewPaidAmt" class="form-control text-md-right" />

                </div>
                <div class="col-md-2">
                    <label asp-for="@Model.NewPaidAmt"> </label>
                </div>
            </div>

            <div class="row form-group text-warning">
                <div class="col-md-5 offset-md-5">
                    <input id="discount" type="text" asp-for="a => @Model.NewDiscount" class="form-control text-md-right" />
                </div>
                <div class="col-md-2">
                    <label asp-for="@Model.NewDiscount"> </label>
                </div>
            </div>

        </div>
        <br />
        <br />
        <br />

        <div class="form-group row">
            <div class="col-md-5 offset-md-5">
                <div class="row">
                    <div class="col-md-6">
                        <a asp-page="Index" class="btn btn-secondary form-control" asp-route-culture="@Request.RouteValues["culture"]"> رجوع</a>

                    </div>

                    @if (User.IsInRole(SD.AdminUser) && (Model.BillHeader.Status == SD.OpenBill))
                    {
                        <div class="col-md-3">
                            <a asp-route-culture="@Request.RouteValues["culture"]" data-toggle="modal" data-target="#Ask" class="btn btn-danger" asp-page-handler="EditBill" asp-route-HeaderId="@Model.BillHeader.Id" type="submit" name="Close">
                                @localizer.Get("حفظ")
                            </a>
                        </div>
                        <div class="modal fade" id="Ask" role="dialog" method="post">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <p class="alert alert-danger">@localizer.Get("هل انت متأكد؟")</p>
                                    </div>
                                    <div class="modal-footer">
                                        <input asp-route-culture="@Request.RouteValues["culture"]" type="submit" asp-page-handler="EditBill" asp-route-HeaderId="@Model.BillHeader.Id" class="btn btn-info" value="@localizer.Get("نعم")" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </form>
</div>

