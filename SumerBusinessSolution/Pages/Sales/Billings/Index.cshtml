@model SumerBusinessSolution.Pages.Sales.Billings.IndexModel
@using SumerBusinessSolution.Utility
@using SumerBusinessSolution.Models
@using Microsoft.AspNetCore.Localization
@using System.ComponentModel.DataAnnotations;
@*@inject IHtmlLocalizer<IndexModel> htmlLocalizer*@ @*for html lozcalization*@
@*@inject IStringLocalizer<IndexModel> localizer*@
@*First Method*@
@inject Services.CommonLocalizationService localizer
@*Second and the easier Method*@

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class=" backgroundWhite">
    <div class="row">

        <div class="col-md-6 ">
            <a asp-route-culture="@Request.RouteValues["culture"]" asp-page="Create" title="اضافة" class="btn btn-info"> <i class="fas fa-plus"></i></a>
        </div>

        <div class="col-md-6 text-right">
            @*<h2 class="text-info"> طلبات حركه المنتجات </h2>*@
            <h2 class="text-info"> @localizer.Get("الفواتير")</h2>

        </div>

    </div>

    <form method="get" asp-page="Index">
        <div class="border backgroundWhite">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-2 text-md-right pb-1">

                                <button asp-route-culture="@Request.RouteValues["culture"]" type="submit" name="submit" title="بحث" value="search" class="btn btn-info form-control">
                                    <i class="fas fa-search"></i>
                                </button>

                            </div>
                            <div class="col-md-4 pb-1">
                                @Html.Editor("CustomerName", new { htmlAttributes = new { @class = "form-control text-md-right", placeholder = @localizer.Get("اسم الزبون....") } })

                            </div>
                            <div class="col-md-3 pb-1">
                                <div class="form-group row float-md-right">
                                    <div>
                                        <input asp-for="SearchToDate" class="form-control" />
                                    </div>
                                    <div>
                                        <label asp-for="SearchToDate" class="control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 pb-1">
                                <div class="form-group row float-md-right">
                                    <div>
                                        <input asp-for="SearchFromDate" class="form-control" />
                                    </div>

                                    <div>
                                        <label asp-for="SearchFromDate" class="control-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <div>

        <table class="table table-striped border table-responsive-md table-responsive-lg text-md-center">
            <tr class="table-secondary">

                <th></th>

                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.CreatedDataTime)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.PaidAmt)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.TotalNetAmt)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.Customer.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.Id)
                </th>
            </tr>

            @if (Model.BillHeaderList.Count() == 0)
            {
                <h2 class="text-danger text-md-center"> @localizer.Get("لا يوجد فواتير")</h2>

            }
            else
            {
                @foreach (var item in Model.BillHeaderList)
                {
        <tr>
            <td style="width:150px;">
                <div class="btn-group" role="group">
                    <form method="post">
                        @if (item.Status == SD.OpenBill)
                        {
                            <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-info" asp-page="MakePayment" type="submit" title="تسديد" asp-route-BhId="@item.Id" name="Payment">
                                @localizer.Get("") <i class="fas fa-money-check-alt"></i>
                            </a>
                        }

                        <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-primary" asp-page="Details" type="submit" title="التفاصيل" asp-route-BhId="@item.Id" name="Details">
                            @localizer.Get("") <i class="far fa-clipboard"></i>
                        </a>


                    </form>
                </div>
            </td>


            <td>
                @Html.DisplayFor(m => item.CreatedDataTime)
            </td>
            <td>
                @Html.DisplayFor(m => item.Status)
            </td>
            <td>
                @Html.DisplayFor(m => item.PaidAmt)
            </td>
            <td>
                @Html.DisplayFor(m => item.TotalNetAmt)
            </td>
            <td>
                @Html.DisplayFor(m => item.Customer.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Id)
            </td>
        </tr>

                }

            }

        </table>

    </div>

</div>

@section Scripts {


    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
         $(document).ready(function () {
    $('#CustomerName').autocomplete({
    source: '@Url.Page("Index", "SearchCustomer")'
    });
         });

    </script>
}

