@page
@model SumerBusinessSolution.BillsModel
@using Sumer.Utility
@using Microsoft.AspNetCore.Localization
@using System.ComponentModel.DataAnnotations;
@*@inject IHtmlLocalizer<IndexModel> htmlLocalizer*@ @*for html lozcalization*@
@*@inject IStringLocalizer<IndexModel> localizer*@
@*First Method*@
@inject Services.CommonLocalizationService localizer
@*Second and the easier Method*@


@{
    ViewData["Title"] = "Bills";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class=" backgroundWhite">
    <div class="row">
        <div class="col-md-12 text-md-right">
            @*<h2 class="text-info"> طلبات حركه المنتجات </h2>*@
            <h2 class="text-info"> @localizer.Get("تقرير الفواتير")</h2>

        </div>

    </div>
    <form method="get" asp-page="Index">
        <div class="border backgroundWhite">
            <div @*style="height:60px;"*@ class="container ">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-1 text-md-right pb-1">

                                <button asp-route-culture="@Request.RouteValues["culture"]" type="submit" name="submit" value="search" class="btn btn-info form-control">
                                    <i class="fas fa-search"></i>
                                </button>

                            </div>
                            <div class="col-md-3 pb-1">
                                @*@Html.Editor("searchProdCode", new { htmlAttributes = new { @class = "form-control", placeholder = ".....رمز المنتج " } })*@

                                @Html.Editor("CustomerName", new { htmlAttributes = new { @class = "form-control text-md-right", placeholder = @localizer.Get("اسم الزبون....") } })

                            </div>
                            <div class="col-md-4 pb-1">
                                <div class="form-group row float-md-right">
                                    <div>
                                        <input asp-for="SearchToDate" class="form-control" />
                                        @*<span asp-validation-for="SearchCreatedTime" class="text-danger"></span>*@
                                    </div>
                                    <div>
                                        <label asp-for="SearchToDate" class="control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 pb-1">
                                <div class="form-group row float-md-right">
                                    <div>
                                        <input asp-for="SearchFromDate" class="form-control" />
                                        @*<span asp-validation-for="SearchCreatedTime" class="text-danger"></span>*@
                                    </div>

                                    <div>
                                        <label asp-for="SearchFromDate" class="control-label"></label>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
    <div>

        <table class="table table-striped border table-responsive-md table-responsive-lg">
            <tr class="table-secondary">

                <th></th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.CreatedDataTime)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.PaidAmt)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.TotalNetAmt)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.Customer.CompanyName)
                </th>
            </tr>

            @if (Model.BillHeaderList.Count() == 0)
            {
                <h2 class="text-danger text-md-center"> @localizer.Get("لا يوجد تقرير للفواتير")</h2>

            }
            else
            {
                @foreach (var item in Model.BillHeaderList)
                {
        <tr>
            <td style="width:150px;">
                <div class="btn-group" role="group">
                    <form method="post">

                        <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-primary" asp-page="../Billings/MakePayment" type="submit" asp-route-BhId="@item.Id" name="Accept">
                            @localizer.Get("تسديد") <i class="fas fa-check"></i>
                        </a>

                        <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success" asp-page="../Billings/Details" type="submit" asp-route-BhId="@item.Id" name="Details">
                            @localizer.Get("التفاصيل") <i class="far fa-clipboard"></i>
                        </a>
                        @if (User.IsInRole(SD.AdminEndUser))
                        {
                            <a asp-route-culture="@Request.RouteValues["culture"]" data-toggle="modal" data-target="#Ask" class="btn btn-danger" asp-page-handler="CloseBillManually" asp-route-HeaderId="@item.Id" type="submit" name="Close">
                                @localizer.Get("اغلاق") <i class="fas fa-window-close"></i>
                            </a>


                            <div class="modal fade" id="Ask" role="dialog" method="post">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="alert alert-danger">@localizer.Get("هل انت متأكد؟")</p>
                                        </div>
                                        <div class="modal-footer">
                                            <input asp-route-culture="@Request.RouteValues["culture"]" type="submit" class="btn btn-success" value="@localizer.Get("نعم")" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }

                    </form>
                </div>
            </td>


            <td>
                @Html.DisplayFor(m => item.CreatedDataTime)
            </td>
            <td>
                @Html.DisplayFor(m => item.Status)
            </td>
            <td>
                @Html.DisplayFor(m => item.PaidAmt)
            </td>
            <td>
                @Html.DisplayFor(m => item.TotalNetAmt)
            </td>
            <td>
                @Html.DisplayFor(m => item.Customer.CompanyName)
            </td>
        </tr>

                }

            }

        </table>

    </div>

</div>


@section Scripts {


    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
         $(document).ready(function () {
    $('#CustomerName').autocomplete({
    source: '@Url.Page("Bills", "SearchCustomer")'
    });
         });




    </script>
}

