@page
@model SumerBusinessSolution.BillsModel
@{
    ViewData["Title"] = "Bills";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


@inject Services.CommonLocalizationService localizer
@using Sumer.Utility
<div class=" backgroundWhite">
    <div class="row">
        <div class="col-md-6 text-right">
            @*<h2 class="text-info"> طلبات حركه المنتجات </h2>*@
            <h2 class="text-info"> @localizer.Get("الفواتير")</h2>

        </div>

    </div>
    <form method="get" asp-page="Index">
        <div class="border backgroundWhite">
            <div @*style="height:60px;"*@ class="container ">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-2 text-md-right pb-1">

                                <button asp-route-culture="@Request.RouteValues["culture"]" type="submit" name="submit" value="search" class="btn btn-info form-control">
                                    <i class="fas fa-search"></i>
                                </button>

                            </div>
                            <div class="col-md-5 pb-1">
                                @*@Html.Editor("searchProdCode", new { htmlAttributes = new { @class = "form-control", placeholder = ".....رمز المنتج " } })*@

                                @Html.Editor("CustomerName", new { htmlAttributes = new { @class = "form-control text-md-right", placeholder = @localizer.Get("اسم الزبون....") } })

                            </div>
                            <div class="col-md-5 pb-1">
                                @*@Html.Editor("searchCreateDateTime", new { htmlAttributes = new { @class = "form-control", placeholder = "..... تاريخ الاضافه " } })*@

                                <div class="form-group">
                                    <label asp-for="SearchFromDate" class="control-label"></label>
                                    <input asp-for="SearchFromDate" class="form-control" />
                                    @*<span asp-validation-for="SearchCreatedTime" class="text-danger"></span>*@
                                </div>

                                <div class="form-group">
                                    <label asp-for="SearchToDate" class="control-label"></label>
                                    <input asp-for="SearchToDate" class="form-control" />
                                    @*<span asp-validation-for="SearchCreatedTime" class="text-danger"></span>*@
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
    <div>

        <table class="table table-striped border table-responsive-md table-responsive-lg">
            <tr class="table-secondary">

                <th></th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.Customer.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.TotalNetAmt)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.PaidAmt)
                </th>

                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.BillHeader.CreatedDataTime)
                </th>

                <th></th>
            </tr>

            @if (Model.BillHeaderList.Count() == 0)
            {
                <h2 class="text-danger text-md-center"> @localizer.Get("لا يوجد طلبات")</h2>

            }
            else
            {
                @foreach (var item in Model.BillHeaderList)
                {
                    <tr>

                        <td>
                            <div class="btn-group" role="group">
                                <form method="post">


                                    @if (User.IsInRole(SD.AdminEndUser))
                                    {
                                        <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success text-white" asp-page="../Billings/MakePayment" asp-route-BhId="@item.Id" type="submit" title="تسديد" name="Accept">
                                            @localizer.Get("") <i class="fas fa-check"></i>
                                        </a>

                                        <a asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-success text-white" asp-page="../Billings/Details" asp-route-BhId="@item.Id" type="submit" title="تفاصيل الفاتورة" name="Details">
                                            @localizer.Get("") <i class="fas fa-check"></i>
                                        </a>

                                        <button asp-route-culture="@Request.RouteValues["culture"]" class="btn btn-warning text-white" asp-page-handler="CloseBillManually" asp-route-HeaderId="@item.Id" type="submit" title="اغلاق الفاتورة" name="Close">
                                            @localizer.Get("") <i class="fas fa-window-close"></i>
                                        </button>
                                    }

                                </form>
                            </div>
                        </td>

                        <td>
                            @Html.DisplayFor(m => item.Customer.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.TotalNetAmt)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.PaidAmt)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CreatedDataTime)
                        </td>
                    </tr>

                }

            }

        </table>

    </div>

</div>


@section Scripts {


    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
         $(document).ready(function () {
    $('#CustomerName').autocomplete({
    source: '@Url.Page("Bills", "SearchCustomer")'
    });
         });

        
 
 
    </script>
}
 
