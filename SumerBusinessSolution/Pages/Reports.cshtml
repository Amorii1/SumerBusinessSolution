        </a>
    </div>

    <div class="column" style="padding-left:80px;">
        <a asp-route-culture="@Request.RouteValues["culture"]" asp-page="Sales/Reports/Bills">
            <img src="~/img/bills.png" style="width:140px;height:140px;" />
