@{
    ViewData["Title"] = "Settings";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="row" style="padding-left:250px; padding-right:100px;">
    <div class="column" style="padding-left:80px;">
